<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
	<constant name="struts.ui.theme" value="simple" />

    <package name="myPackage" extends="struts-default">

        <default-action-ref name="index" />

        <action name="login" class="fr.gfi.alan.delahaye.actions.LoginAction">
            <result>/jsp/login.jsp</result>
        </action>

        <action name="validateLogin" class="fr.gfi.alan.delahaye.actions.ValidateLoginAction">
            <result name="input">/jsp/login.jsp</result>
            <result type="redirectAction">dashboard</result>
        </action>

		<action name="dashboard" class="fr.gfi.alan.delahaye.actions.tdb.DashboardAction">
            <result name="login" type="redirectAction">login.do</result>
            <result>/jsp/tdb/dashboard.jsp</result>
        </action>
		
		<action name="administration" class="fr.gfi.alan.delahaye.actions.administration.AdministrationAction">
            <result name="login" type="redirectAction">login.do</result>
            <result>/jsp/administration/administration.jsp</result>
        </action>
		
		<action name="monCompte" class="fr.gfi.alan.delahaye.actions.administration.MonCompteAction">
            <result name="login" type="redirectAction">login.do</result>
            <result>/jsp/administration/monCompte.jsp</result>
        </action>
        
        <action name="gestionUtilisateurs" class="fr.gfi.alan.delahaye.actions.administration.GestionUtilisateursAction">
            <result name="login" type="redirectAction">login.do</result>
            <result>/jsp/administration/gestionUtilisateurs.jsp</result>
        </action>
        
        <action name="gestionPerimetres" class="fr.gfi.alan.delahaye.actions.administration.GestionPerimetresAction">
            <result name="login" type="redirectAction">login.do</result>
            <result>/jsp/administration/gestionPerimetres.jsp</result>
        </action>
        
        <action name="export" class="fr.gfi.alan.delahaye.actions.administration.ExportAction">
            <result name="login" type="redirectAction">login.do</result>
            <result>/jsp/administration/export.jsp</result>
        </action>
         <action name="perimetre" class="fr.gfi.alan.delahaye.actions.perimetre.PerimetreAction">
            <result name="login" type="redirectAction">login.do</result>
            <result>/jsp/perimetre/perimetre.jsp</result>
        </action>
		
		<action name="logout" class="fr.gfi.alan.delahaye.actions.LoginAction" method="deconnexion">
            <result name="success">/jsp/login.jsp</result>
        </action>

    </package>

</struts>
